{% extends 'base.html.twig' %}

{% block title %}
  Find a mule
{% endblock %}

{% block description %}
  Save money shipping via travellers
{% endblock %}

{% block jumbotron %}
  <i class="fa fa-money pull-xs-right" style="font-size: 10rem;" aria-hidden="true"></i>
  <h1 class="display-3">{{ block('description') }}</h1>
  <p>iPhone stolen whilst you're in Guatamala? Ship it to someone in the US who's heading your way next week.</p>
  <p><a class="btn btn-primary btn-lg" href="#" role="button">Find a mule</a></p>
{% endblock %}

{% block content %}
  <div class="row">
    <div class="col-md-4">
      <form>
        <div class="row">
          <div class="col-md-6">
            <fieldset class="form-group">
              <label for="fromcty">From</label>
              <input class="form-control" id="fromcty" placeholder="United States">
            </fieldset>
          </div>
          <div class="col-md-6">
            <fieldset class="form-group">
              <label for="tocty">To</label>
              <input class="form-control" id="tocty" placeholder="Guatamala">
            </fieldset>
          </div>
        </div>

        <label for="timeframe">Timeframe</label>
        <img src="/images/calendar.png" style="max-width: 100%;">

        <br>
        <br>

        <div class="checkbox">
          <label>
            <input type="checkbox"> Supermules only <img src="/images/donnnkey-super.png" style="height: 28px;">
          </label>
        </div>

        <div class="checkbox">
          <label>
            <input type="checkbox"> Verified only <i class="fa fa-trophy" aria-hidden="true" style="font-size: 1.25rem;"></i>
          </label>
        </div>

        <br>

        <button type="submit" class="btn btn-primary">Find a mule</button>
      </form>

    </div>

    <div class="col-md-8">
      {% for x in 1..2 %}
      {% for i in ['François', 'Jenny', 'Morgan', 'Steve', 'Titus'] %}
        <div class="row row-striped" style="margin-bottom: 1rem; padding: 1rem 0 0;">
          <div class="col-xs-2" style="padding: 1rem; text-align: center;">
            {% if i in ['François', 'Morgan'] %}
              <img src="/images/donnnkey-super.png">
            {% else %}
              <img src="/images/donnnkey-nopack.png">
            {% endif %}
            <strong>{{ i }}</strong>
            <br>
            <span style="color: gold;">
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star" aria-hidden="true"></i>
              {% if i in ['François', 'Morgan'] %}
                <i class="fa fa-star" aria-hidden="true"></i>
                <i class="fa fa-star" aria-hidden="true"></i>
              {% else %}
                <i class="fa fa-star-half-o" aria-hidden="true"></i>
                <i class="fa fa-star-o" aria-hidden="true" style="color: #ccc;"></i>
              {% endif %}
            </span>
          </div>
          <div class="col-xs-5">
            <dl class="dl-horizontal">
              <dt class="col-xs-5">Spare space</dt>
              <dd class="col-xs-7">2x bags of sugar</dd>
              <dt class="col-xs-5">Spare hold</dt>
              <dd class="col-xs-7">1x bag <small>(+$100pb)</small></dd>
              <dt class="col-xs-5">Travel date</dt>
              <dd class="col-xs-7">5th February</dd>
              <dt class="col-xs-5">Visit duration</dt>
              <dd class="col-xs-7">10 days</dd>
            </dl>
          </div>
          <div class="col-xs-3">
            <dl class="dl-horizontal">
              <dt class="col-xs-5">Reviews</dt>
              {% if i in ['François', 'Morgan'] %}
                <dd class="col-xs-7" style="text-align: center;">42</dd>
              {% else %}
                <dd class="col-xs-7" style="text-align: center;">8</dd>
              {% endif %}
              <dt class="col-xs-5">Insurance</dt>
              <dd class="col-xs-7" style="text-align: center;"><i class="fa fa-check"></i></dd>
              <dt class="col-xs-5">Supermule</dt>
              {% if i in ['François', 'Morgan'] %}
                <dd class="col-xs-7" style="text-align: center;"><i class="fa fa-check"></i></dd>
              {% else %}
                <dd class="col-xs-7" style="text-align: center;"><i class="fa fa-times"></i></dd>
              {% endif %}
              <dt class="col-xs-5">Verified</dt>
              <dd class="col-xs-7" style="text-align: center;"><i class="fa fa-check"></i></dd>
            </dl>
          </div>
          <div class="col-xs-2">
            <div style="text-align: center">
              Current bid
              {% if i in ['François', 'Morgan'] %}
                <strong style="font-size: 1.4rem;">$62.50</strong>
              {% else %}
                <strong style="font-size: 1.4rem;">$40.00</strong>
              {% endif %}
            </div>
            <a class="btn btn-primary" href="#" role="button" style="margin: .5rem;">Mule it</a></p>
          </div>
        </div>
      {% endfor %}
      {% endfor %}

      <style>
        .row-striped:nth-child(2n) {
          background: #fbfbfb;
        }
      </style>

      <nav>
        <ul class="pagination">
          <li class="page-item disabled">
            <a class="page-link" href="#" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
              <span class="sr-only">Previous</span>
            </a>
          </li>
          <li class="page-item active">
            <a class="page-link" href="#">1 <span class="sr-only">(current)</span></a>
          </li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item"><a class="page-link" href="#">4</a></li>
          <li class="page-item"><a class="page-link" href="#">5</a></li>
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
              <span class="sr-only">Next</span>
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
{% endblock %}
